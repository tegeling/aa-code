<aura:component
  implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId"
  access="global"
>
  <div class="slds-box" aura:id="main">
    <div aura:id="panelList">
      <header>
        <h2 class="slds-text-heading--small slds-m-bottom--small">
          Find job candidates
        </h2>
        <div class="slds-form-element">
          <label
            class="slds-form-element__label slds-assistive-text"
            for="searchBox"
            >Search</label
          >
          <div class="slds-form-element__control">
            <ui:inputText
              aura:id="searchTerm"
              label=""
              class="field"
              placeholder="Search for..."
              change="{!c.updateSearch}"
            />
          </div>
        </div>
      </header>
      <div aura:id="scrollableArea">
        <ul class="slds-list--vertical slds-has-dividers--top-space">
          <li class="slds-list__item">
            <h3 class="slds-text-heading--small slds-m-bottom--x-small">
              Item 1
            </h3>
          </li>
          <li class="slds-list__item">
            <h3 class="slds-text-heading--small slds-m-bottom--x-small">
              Item 2
            </h3>
          </li>
          <li class="slds-list__item">
            <h3 class="slds-text-heading--small slds-m-bottom--x-small">
              Item 3
            </h3>
          </li>
        </ul>
      </div>
    </div>
  </div>
</aura:component>
